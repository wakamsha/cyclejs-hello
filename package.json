{
  "name": "hello-cyclejs",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:wakamsha/hello-cyclejs.git",
  "author": "wakamsha",
  "license": "MIT",
  "dependencies": {
    "@cycle/dom": "^17.1.0",
    "@cycle/run": "^3.1.0",
    "@cycle/rxjs-run": "^7.0.0",
    "rxjs": "^5.3.0",
    "xstream": "^10.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.24.4",
    "concurrently": "^3.5.1",
    "ts-loader": "^4.3.0",
    "typescript": "^2.8.3",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.3"
  },
  "scripts": {
    "reset": "rm -rf public/; mkdir -p public/",
    "copy": "cp src/index.html public/index.html",
    "script:watch": "NODE_ENV=dev  webpack --progress --colors --config ./webpack.config.js --watch -d",
    "script:build": "NODE_ENV=prod webpack --progress --colors --config ./webpack.config.js",
    "serv": "browser-sync start -c bs-config.js",
    "start": "yarn reset; yarn copy; concurrently \"yarn script:watch\" \"yarn serv\"",
    "build": "yarn reset; yarn copy; yarn script:build; ruby -run -e httpd ./public -p 3000"
  }
}
